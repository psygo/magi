{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Bundled projects */
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@actions/*": [
        "./src/server/actions/*"
      ],
      "@actions": [
        "./src/server/actions/exports"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@components": [
        "./src/components/exports"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@providers": [
        "src/providers/exports"
      ],
      "@db/*": [
        "./src/server/db/*"
      ],
      "@db": [
        "./src/server/db/exports"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@hooks": [
        "./src/hooks/exports"
      ],
      "@server/*": [
        "./src/server/*"
      ],
      "@server": [
        "./src/server/exports"
      ],
      "@shad/*": [
        "src/components/common/shad/*"
      ],
      "@shad": [
        "src/components/common/shad/exports"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@styles": [
        "./src/styles/exports"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@types": [
        "./src/types/exports"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@utils": [
        "./src/utils/exports"
      ],
      "@validation/*": [
        "./src/validation/*"
      ],
      "@validation": [
        "./src/validation/exports"
      ],
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/components/comments"
  ],
  "exclude": [
    "node_modules"
  ]
}